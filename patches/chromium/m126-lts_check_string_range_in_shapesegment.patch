@@ -429,6 +429,12 @@ inline void HarfBuzzShaper::CheckTextLen(unsigned start,
   CHECK_LE(length, text_.length() - start);
 }
 
+inline void HarfBuzzShaper::CheckTextEnd(unsigned start, unsigned end) const {
+  CHECK_LE(start, end);
